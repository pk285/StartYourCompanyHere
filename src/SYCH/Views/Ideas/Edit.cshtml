@model SYCH.Models.Idea

@{
    ViewData["Title"] = "Edit";
}
<center>
    <h2>Edit your idea</h2>
</center>

<div class="box1"></div>
<br />
<form asp-action="Edit">
    <div class="form-horizontal">      
        
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Industry" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Industry" class="form-control" />
                <span asp-validation-for="Industry" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Votes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Votes" class="form-control" />
                <span asp-validation-for="Votes" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<center>
    <p>
        <a asp-action="Index">Back to List</a>
    </p>

</center>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
